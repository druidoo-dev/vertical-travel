<?xml version = "1.0" encoding="utf-8"?>
<odoo>

    <!-- Views -->
    <record model="ir.ui.view" id="travel_tree_view">
        <field name="model">travel.travel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="city_ids"/>
                <field name="date_start"/>
                <field name="date_stop"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="travel_form_view">
        <field name="model">travel.travel</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" options="{'clickable': '1', 'fold_field': 'fold'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" groups="base.group_user" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_stop"/>
                        </group>
                        <group>
                            <field name="city_ids" widget="many2many_tags"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="passengers" string="Passengers">
                            <field name="passenger_ids">
                                <tree editable="bottom">
                                    <field name="partner_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="travel_calendar_view">
        <field name="model">travel.travel</field>
        <field name="type">calendar</field>
        <field name="arch" type="xml">
            <calendar color="stage_id" date_start="date_start" date_stop="date_stop">
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <!-- Actions -->
    <record model="ir.actions.act_window" id="action_travels_tree_list">
        <field name="name">Travels</field>
        <field name="view_id" ref="travel_tree_view"/>
        <field name="res_model">travel.travel</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- Menus -->
    <menuitem name="Travel"
              id="menu_top_travel"
              groups="travel.group_user"/>

    <menuitem name="Travel"
              id="menu_travel_main_form"
              parent="menu_top_travel" />

    <menuitem name="Travels"
              id="menu_travels"
              parent="menu_travel_main_form"
              action="action_travels_tree_list"/>

    <menuitem id="menu_travel_report"
              name="Reports"
              parent="menu_top_travel"/>

</odoo>
